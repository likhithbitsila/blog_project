<div class="for_home">
    <%= button_to "Add New Blog" , new_blog_path, method: :get  %>
    <form class="d-flex" action="/search" >
        <input class="form-control me-2" style="border-bottom:2px solid black" type="search" name="query" placeholder="Search here...." aria-label="Search" >
        <button class="btn btn-outline-success" type="submit" style="height:20px">Search</button>
    </form>
    <%= button_to "Home" , root_path , method: :get %>
    <%= button_to "Log out", destroy_user_session_path, method: :delete %>
    <%# <button class="addnewblock"><%= link_to "My Blog" , new_blog_path  %>
 
    
</div>

<% if @blog.size==0 %>
    <h1 style="width:500px; margin-top:100px;"><i><marquee behavior="alternate" >You have no  blogs</marquee></i></h1>
<% else %>
    <h1 style="margin-top:100px; margin-bottom:50px;">My Blogs</h1>


    <table border="3">
        <thead>
            <th>Author Name</th>
            <th>Email</th>
            <th>Blog Title</th>
            <th colspan="3" >Action</th>

        </thead>
        <tbody>
            <% @blog.each do |a|%>
            <tr class="row">
                <td><%= a.author %></td>
                <td><%= a.authors_email %></td>
                <td><%= a.title %></td>
                    <td><%= link_to "view" , a %></td>
                    <td><%= link_to "edit" , edit_blog_path(a)%></td>
                    <td><%= button_to "delete" , a , method: :delete, data: {
                        turbo_confirm: "Are You Sure?" } %></td>


            </tr>
            <%end%>
        </tbody>
    </table>
<% end %>